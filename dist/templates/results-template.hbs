<section class="results">
	<div class="results-header">  
		<h3>You should try:</h3>     
		<h2 class="bold-text">{{name}}</h2>  
	</div> 
	<div class="col2 col-left">   
		<img src="{{img_src}}"/>   
	</div>  
	<div class="col2 col-right">
		<p class="description">{{desc}}</p>
		<p class="lfloat">Duration: <span class="bold-text">{{duration}}</span>
			<a class="info-link bold-text" href="{{infolink}}" target="_blank">More Info</a>
		</p>
		<div class="image-wrapper">
			<span class="location-indicator" style="left:{{leftpos}}; top:{{toppos}}"></span> 
			<img src="dist/assets/nz_outline_dark.svg" width="108px"/>
		</div>
	</div>
</section>
